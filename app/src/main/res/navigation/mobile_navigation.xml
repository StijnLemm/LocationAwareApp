<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_map">

    <fragment
        android:id="@+id/navigation_destination"
        android:name="com.study.locationawareapp.ui.destination.DestinationFragment"
        android:label="@string/title_destination"
        tools:layout="@layout/fragment_destination" />

    <fragment
        android:id="@+id/navigation_map"
        android:name="com.study.locationawareapp.ui.map.MapFragment"
        android:label="@string/title_map"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/navigation_directions"
        android:name="com.study.locationawareapp.ui.directions.DirectionsFragment"
        android:label="@string/title_directions"
        tools:layout="@layout/fragment_directions" />
</navigation>