<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/gray_background"
    android:elevation="2dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ImageView_destination"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:src="@drawable/ic_baseline_train_24"
        app:layout_constraintBottom_toBottomOf="@id/TextView_destinationItem_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_destinationItem_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="@string/breda_central"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ImageView_destination"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TextView_destinationItem_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="0:50"
        app:layout_constraintStart_toEndOf="@id/ImageView_destination"
        app:layout_constraintTop_toBottomOf="@id/TextView_destinationItem_title" />

    <TextView
        android:id="@+id/TextView_destinationItem_switches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@id/ImageView_destination_switch"
        app:layout_constraintTop_toBottomOf="@id/TextView_destinationItem_title" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:id="@+id/ImageView_destination_switch"
        android:src="@drawable/ic_baseline_shuffle_24"
        app:layout_constraintEnd_toEndOf="@id/TextView_destinationItem_title"
        app:layout_constraintTop_toBottomOf="@id/TextView_destinationItem_title"

        />


</androidx.constraintlayout.widget.ConstraintLayout>